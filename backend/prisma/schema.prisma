generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  title String
  category String
  cards Card[]
}

model Card {
  id Int @id @default(autoincrement())
  title String
  description String
  gifURL String
  author String
  upvotes Int
  comments Comment[]
  boardId Int 
  board Board @relation(fields: [boardId], references: [id]) // connects cards to each board
}

model Comment {
  id Int @id @default(autoincrement())
  message String
  author String
  cardId Int
  card Card @relation(fields: [cardId], references: [id])
}
